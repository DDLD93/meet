{
  "openapi": "3.0.3",
  "info": {
    "title": "LiveKit Meet API",
    "version": "1.0.0",
    "description": "REST API for managing LiveKit-powered meetings, participants, tokens, chat history, and scheduler operations."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    },
    {
      "url": "https://meet.viniciusint.com",
      "description": "Production server"
    }
  ],
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key",
        "description": "API key for external API access. Set via API_SECRET_KEYS environment variable (comma-separated)."
      }
    },
    "schemas": {
      "Meeting": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "title": { "type": "string" },
          "description": { "type": "string", "nullable": true },
          "startTime": { "type": "string", "format": "date-time" },
          "endTime": { "type": "string", "format": "date-time" },
          "status": { "type": "string", "enum": ["SCHEDULED", "ACTIVE", "ENDED"] },
          "isPublic": { "type": "boolean" },
          "isInstant": { "type": "boolean" },
          "roomName": { "type": "string" },
          "joinUrl": { "type": "string", "format": "uri" },
          "participants": {
            "type": "array",
            "items": { "type": "string", "format": "email" }
          }
        },
        "required": [
          "id",
          "title",
          "startTime",
          "endTime",
          "status",
          "isPublic",
          "isInstant",
          "roomName",
          "joinUrl",
          "participants"
        ]
      },
      "MeetingCreateRequest": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "startTime": { "type": "string", "format": "date-time" },
          "endTime": { "type": "string", "format": "date-time" },
          "isPublic": { "type": "boolean", "default": false },
          "password": { "type": "string", "minLength": 6 },
          "participants": {
            "type": "array",
            "items": { "type": "string", "format": "email" }
          }
        },
        "required": ["title", "startTime", "endTime", "password"]
      },
      "InstantMeetingRequest": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "isPublic": { "type": "boolean", "default": false },
          "participants": {
            "type": "array",
            "items": { "type": "string", "format": "email" }
          }
        },
        "required": ["title"]
      },
      "MeetingListResponse": {
        "type": "object",
        "properties": {
          "meetings": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Meeting" }
          }
        },
        "required": ["meetings"]
      },
      "MeetingCreateResponse": {
        "type": "object",
        "properties": {
          "meeting": { "$ref": "#/components/schemas/Meeting" },
          "password": { "type": "string" }
        },
        "required": ["meeting", "password"]
      },
      "TokenRequest": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string" },
          "name": { "type": "string" },
          "metadata": { "type": "string" }
        },
        "required": ["email", "password"]
      },
      "TokenResponse": {
        "type": "object",
        "properties": {
          "token": { "type": "string" },
          "livekitUrl": { "type": "string", "format": "uri" },
          "roomName": { "type": "string" },
          "meeting": { "$ref": "#/components/schemas/Meeting" }
        },
        "required": ["token", "livekitUrl", "roomName", "meeting"]
      },
      "ParticipantsUpdateRequest": {
        "type": "object",
        "properties": {
          "participants": {
            "type": "array",
            "items": { "type": "string", "format": "email" }
          }
        },
        "required": ["participants"]
      },
      "Message": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "meetingId": { "type": "string", "format": "uuid" },
          "senderEmail": { "type": "string", "format": "email", "nullable": true },
          "senderName": { "type": "string", "nullable": true },
          "content": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "meetingId", "content", "createdAt"]
      },
      "MessageCreateRequest": {
        "type": "object",
        "properties": {
          "meetingId": { "type": "string", "format": "uuid" },
          "content": { "type": "string" },
          "senderEmail": { "type": "string", "format": "email" },
          "senderName": { "type": "string" }
        },
        "required": ["meetingId", "content"]
      },
      "MessageListResponse": {
        "type": "object",
        "properties": {
          "messages": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Message" }
          }
        },
        "required": ["messages"]
      },
      "SchedulerResponse": {
        "type": "object",
        "properties": {
          "timestamp": { "type": "string", "format": "date-time" },
          "activated": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Meeting" }
          },
          "ended": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Meeting" }
          }
        },
        "required": ["timestamp", "activated", "ended"]
      },
      "MeetingV1": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "title": { "type": "string" },
          "status": { "type": "string", "enum": ["ACTIVE", "ENDED"] },
          "roomName": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" },
          "joinUrl": { "type": "string", "format": "uri" },
          "messageCount": { "type": "integer", "minimum": 0 },
          "participants": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "email": { "type": "string", "format": "email" },
                "name": { "type": "string" }
              },
              "required": ["email", "name"]
            }
          }
        },
        "required": ["id", "title", "status", "roomName", "createdAt", "updatedAt", "joinUrl", "messageCount", "participants"]
      },
      "MeetingV1CreateRequest": {
        "type": "object",
        "properties": {
          "title": { "type": "string", "minLength": 1, "maxLength": 120 },
          "participants": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "email": { "type": "string", "format": "email" },
                "name": { "type": "string", "minLength": 1, "maxLength": 120 }
              },
              "required": ["email", "name"]
            }
          }
        },
        "required": ["title"]
      },
      "MeetingV1UpdateRequest": {
        "type": "object",
        "properties": {
          "title": { "type": "string", "minLength": 1, "maxLength": 120 },
          "status": { "type": "string", "enum": ["ACTIVE", "ENDED"] }
        }
      },
      "MeetingV1ListResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/MeetingV1" }
          },
          "meta": {
            "type": "object",
            "properties": {
              "total": { "type": "integer" },
              "limit": { "type": "integer" },
              "offset": { "type": "integer" },
              "hasMore": { "type": "boolean" },
              "timestamp": { "type": "string", "format": "date-time" }
            },
            "required": ["total", "limit", "offset", "hasMore", "timestamp"]
          }
        },
        "required": ["data", "meta"]
      },
      "MeetingV1Response": {
        "type": "object",
        "properties": {
          "data": { "$ref": "#/components/schemas/MeetingV1" },
          "meta": {
            "type": "object",
            "properties": {
              "timestamp": { "type": "string", "format": "date-time" }
            },
            "required": ["timestamp"]
          }
        },
        "required": ["data", "meta"]
      },
      "MeetingV1DeleteResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "id": { "type": "string", "format": "uuid" },
              "deleted": { "type": "boolean" }
            },
            "required": ["id", "deleted"]
          },
          "meta": {
            "type": "object",
            "properties": {
              "timestamp": { "type": "string", "format": "date-time" }
            },
            "required": ["timestamp"]
          }
        },
        "required": ["data", "meta"]
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": { "type": "string" },
          "code": { "type": "string" },
          "issues": { "type": "object" }
        },
        "required": ["error", "code"]
      }
    },
    "parameters": {
      "MeetingId": {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": { "type": "string", "format": "uuid" },
        "description": "Unique identifier of the meeting"
      }
    }
  },
  "paths": {
    "/api/meetings": {
      "get": {
        "summary": "List meetings",
        "description": "Retrieve recent meetings. Filter by room name, status, or limit results.",
        "parameters": [
          {
            "name": "roomName",
            "in": "query",
            "schema": { "type": "string" }
          },
          {
            "name": "status",
            "in": "query",
            "schema": { "type": "string", "enum": ["SCHEDULED", "ACTIVE", "ENDED"] }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": { "type": "integer", "minimum": 1, "maximum": 200 }
          }
        ],
        "responses": {
          "200": {
            "description": "List of meetings",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MeetingListResponse" }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create scheduled meeting",
        "description": "Create a scheduled meeting with password protection and optional participant allowlist.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MeetingCreateRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Meeting created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MeetingCreateResponse" }
              }
            }
          },
          "400": { "description": "Validation error" }
        }
      }
    },
    "/api/meetings/instant": {
      "post": {
        "summary": "Create instant meeting",
        "description": "Launch an immediate meeting with a generated password and join link.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/InstantMeetingRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Instant meeting created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MeetingCreateResponse" }
              }
            }
          },
          "400": { "description": "Validation error" }
        }
      }
    },
    "/api/meetings/{id}/token": {
      "post": {
        "summary": "Issue LiveKit access token",
        "description": "Validate join credentials and issue a LiveKit token for the meeting.",
        "parameters": [
          { "$ref": "#/components/parameters/MeetingId" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/TokenRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token issued",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/TokenResponse" }
              }
            }
          },
          "401": { "description": "Invalid password" },
          "403": { "description": "Participant not authorized" },
          "404": { "description": "Meeting not found" }
        }
      }
    },
    "/api/meetings/{id}/participants": {
      "get": {
        "summary": "List participants",
        "parameters": [
          { "$ref": "#/components/parameters/MeetingId" }
        ],
        "responses": {
          "200": {
            "description": "Participant emails",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "participants": {
                      "type": "array",
                      "items": { "type": "string", "format": "email" }
                    }
                  },
                  "required": ["participants"]
                }
              }
            }
          },
          "404": { "description": "Meeting not found" }
        }
      },
      "post": {
        "summary": "Replace participant allowlist",
        "parameters": [
          { "$ref": "#/components/parameters/MeetingId" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ParticipantsUpdateRequest" }
            }
          }
        },
        "responses": {
          "200": { "description": "Updated participant list" },
          "400": { "description": "Validation error" },
          "404": { "description": "Meeting not found" }
        }
      },
      "delete": {
        "summary": "Remove participant from allowlist",
        "parameters": [
          { "$ref": "#/components/parameters/MeetingId" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" }
                },
                "required": ["email"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Updated participant list" },
          "400": { "description": "Cannot delete last participant" },
          "404": { "description": "Meeting or participant not found" }
        }
      }
    },
    "/api/scheduler": {
      "get": {
        "summary": "Run scheduler cycle (GET)",
        "description": "Trigger meeting lifecycle updates and obtain a summary.",
        "responses": {
          "200": {
            "description": "Scheduler results",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SchedulerResponse" }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Run scheduler cycle (POST)",
        "description": "Trigger meeting lifecycle updates when invoked by cron or background jobs.",
        "responses": {
          "200": {
            "description": "Scheduler results",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SchedulerResponse" }
              }
            }
          }
        }
      }
    },
    "/api/messages": {
      "get": {
        "summary": "List chat messages",
        "parameters": [
          {
            "name": "meetingId",
            "in": "query",
            "schema": { "type": "string", "format": "uuid" },
            "required": true
          },
          {
            "name": "limit",
            "in": "query",
            "schema": { "type": "integer", "minimum": 1, "maximum": 500 }
          }
        ],
        "responses": {
          "200": {
            "description": "Meeting chat history",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MessageListResponse" }
              }
            }
          },
          "400": { "description": "Missing meetingId" }
        }
      },
      "post": {
        "summary": "Persist chat message",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MessageCreateRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Chat message stored",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Message" }
              }
            }
          },
          "404": { "description": "Meeting not found" }
        }
      }
    },
    "/api/v1/meetings": {
      "get": {
        "summary": "List meetings (External API)",
        "description": "Retrieve paginated list of meetings with filtering. Requires API key authentication.",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "schema": { "type": "string", "enum": ["ACTIVE", "ENDED"] },
            "description": "Filter by meeting status"
          },
          {
            "name": "limit",
            "in": "query",
            "schema": { "type": "integer", "minimum": 1, "maximum": 200, "default": 50 },
            "description": "Maximum number of meetings to return"
          },
          {
            "name": "offset",
            "in": "query",
            "schema": { "type": "integer", "minimum": 0, "default": 0 },
            "description": "Number of meetings to skip for pagination"
          }
        ],
        "responses": {
          "200": {
            "description": "Paginated list of meetings",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MeetingV1ListResponse" }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing API key",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create meeting (External API)",
        "description": "Create a new instant meeting. Requires API key authentication.",
        "security": [{ "ApiKeyAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MeetingV1CreateRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Meeting created successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MeetingV1Response" }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing API key",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/api/v1/meetings/{id}": {
      "get": {
        "summary": "Get meeting details (External API)",
        "description": "Retrieve detailed information about a specific meeting. Requires API key authentication.",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" },
            "description": "Unique identifier of the meeting"
          }
        ],
        "responses": {
          "200": {
            "description": "Meeting details",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MeetingV1Response" }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing API key",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "404": {
            "description": "Meeting not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "Update meeting (External API)",
        "description": "Update meeting title or status. Requires API key authentication.",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" },
            "description": "Unique identifier of the meeting"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MeetingV1UpdateRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Meeting updated successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MeetingV1Response" }
              }
            }
          },
          "400": {
            "description": "Validation error or no fields to update",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing API key",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "404": {
            "description": "Meeting not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete meeting (External API)",
        "description": "Soft delete a meeting by setting its status to ENDED. Requires API key authentication.",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" },
            "description": "Unique identifier of the meeting"
          }
        ],
        "responses": {
          "200": {
            "description": "Meeting deleted successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MeetingV1DeleteResponse" }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing API key",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "404": {
            "description": "Meeting not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    }
  }
}

